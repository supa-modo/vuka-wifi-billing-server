# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=vuka_wifi_db
DB_USER=postgres
DB_PASSWORD=password
DB_SSL=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Admin Configuration
ADMIN_EMAIL=admin@vukawifi.com
ADMIN_PASSWORD=admin123
ADMIN_FIRST_NAME=System
ADMIN_LAST_NAME=Administrator

# M-Pesa Configuration
MPESA_CONSUMER_KEY=your_mpesa_consumer_key
MPESA_CONSUMER_SECRET=your_mpesa_consumer_secret
MPESA_BUSINESS_SHORT_CODE=174379
MPESA_LIPA_NA_MPESA_PASSKEY=your_passkey
MPESA_CALLBACK_URL=https://yourdomain.com/api/v1/payments/callback
MPESA_ENVIRONMENT=sandbox

# SMS Configuration
SMS_PROVIDER=africas_talking
AFRICAS_TALKING_USERNAME=your_username
AFRICAS_TALKING_API_KEY=your_api_key
SMS_SENDER_ID=VukaWiFi

# Router Configuration
ROUTER_HOST=192.168.1.1
ROUTER_USERNAME=admin
ROUTER_PASSWORD=router_password
ROUTER_API_PORT=8728

# WiFi Configuration
WIFI_SSID=VukaWiFi_Guest
WIFI_DEFAULT_BANDWIDTH_DOWNLOAD=10M
WIFI_DEFAULT_BANDWIDTH_UPLOAD=5M

# Application Configuration
APP_NAME=VukaWiFi
APP_URL=https://vukawifi.com
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
MAX_DEVICES_PER_PLAN=5

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# File Upload
MAX_FILE_SIZE=5MB
UPLOAD_PATH=uploads/ 